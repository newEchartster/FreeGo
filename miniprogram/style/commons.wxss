.container-white {
  display: flex;
  flex-direction: column;
  align-items: center;
  box-sizing: border-box;
  background-color: #fff;
}
.shop-view {
  display:flex;
  flex-direction:row;
  justify-content:flex-start;
  background-color: #6A7D8F;
  width: 100%;
  height: 80px;
}
.shop-logo {
  will-change: 80px;
  width: 80px;
  text-align: center;
}
.shop-name {
  font-size: 12px;
  text-align: center;
  height: 20px;
  line-height: 20px;
}
.shop-logo image{
  width: 60px; 
  height: 60px; 
  background-color: #eeeeee;
  border-radius: 50%;
  margin-top: 10px;
  margin-bottom: 10px;
}
