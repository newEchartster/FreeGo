.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  box-sizing: border-box;
}
/* 搜索 */
.search-view {
  height: 48px;
  width: 100%;
}
/* 权益列表 */
.welfare-list {
  margin-top: 10px;
  background-color: #CCCCCC;
}
.welfare-item {
  margin-bottom: 2px;
  background-color: #fff;
  display:flex;
  flex-direction:row;
  height: 80px;
}
.welfare-item-title {
  font-weight: bold;
  font-size: 14px;
  margin: 5px;
}
.welfare-item-date {
  font-size: 12px;
  margin-bottom: 2px;
  margin-left: 10px;
}
.welfare-item-value {
  font-size: 12px;
  margin-bottom: 2px;
  margin-left: 10px;
}
.shop-logo {
  will-change: 80px;
}
.shop-logo-image{
  width: 80px; 
  height: 80px; 
  background-color: #eeeeee;
}
.shop-position {
  width: 45px;
  font-size: 12px;
  padding-top: 20px;
  text-align: center;
}
.flex-header {
  display:flex;
  flex-direction:row;
  justify-content:space-evenly;
  width: 100%;
  height: 40px;
  background-color: white;
}
/* header部分 */
.header-item {
  flex: 1;
  text-align: center;
  border-color: #CCCCCC;
  border-style:solid;
  border-width: 0px;
}
.header-item-view {
  padding-top: 0px;
  font-size: 14px;
}
.header-item-text {
  color: red;
  font-size: 14px;
}
.btn-use {
  background-color: #008000;
  border-radius: 10px;
}
.nav-tabs{
  width: 100%;
  height: 75rpx;
  display: flex;   
}
.tab-content{
  flex: 1;
}
.default{
    line-height:75rpx;
    text-align:center;
    flex:1;
    border-bottom:1px solid #eee;
    color:#000;
    font-weight:bold;
    font-size:28rpx;  
}
.active{
    line-height:75rpx;
    text-align:center;
    color:#fc5558;
    flex:1;
    border-bottom:1px solid red;
    font-weight:bold;
    font-size:28rpx;
}
.loading{  
  padding: 10rpx;  
  text-align: center;  
}  
.loading:before{  
  display: inline-block;  
  margin-right: 5rpx;  
  vertical-align: middle;  
  content: '';  
  width: 40rpx;  
  height: 40rpx;  
  /* background: url(../../images/icon-loading.png) no-repeat;   */
  background-size: contain;  
  animation: rotate 1s linear infinite;  
}  
.loading.complete:before{  
  display: none;  
}
.index-card {
  width: 100%;
  height: 140px;
}
.card-no {
  position: absolute;
  left: 20px;
  top: 110px;
  color: #fff;
}
.card-date {
  position: absolute;
  right: 20px;
  top: 110px;
  color: #fff;
  font-size: 12px;
}