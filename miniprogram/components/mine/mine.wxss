/* components/mine/mine.wxss */
.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  box-sizing: border-box;
}
.navi {
  height: 120rpx;
  width: 100%;
  background: #fff;
  border: 1px solid rgba(0, 0, 0, 0.1);
  border-left: none;
  border-right: none;
  display: flex;
  flex-direction: row;
  align-items: center;
  transition: all 300ms ease;
}
.navi-text {
  width: 100%;
  line-height: 52px;
  font-size: 34rpx;
  color: #007aff;
  padding-left: 15px;
}