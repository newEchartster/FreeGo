/* miniprogram/pages/myshop/statistic/statistic.wxss */
.member-item {
  margin-bottom: 2px;
  background-color: #fff;
  border-bottom: 2px solid #e9e9e9;
}
.title {
  display:flex;
  flex-direction:row;
  width: 100%;
  background-color: #353535;
  height: 40px;
  padding: 5px 10px;
  margin-bottom: 2px;
}
.title-text-2 {
  line-height: 40px;
  font-size: 15pt;
  padding-left: 40px;
  color: #fff;
}
.title-total {
  line-height: 40px;
  margin-right: 40px;
  flex: 1;
  text-align: right;
  color: #fff;
}
.title-text {
  line-height: 30px;
  padding-left: 20px;
  font-size: 12pt;
}
.item-text-title {
  font-weight: bold;
  font-size: 14pt;
  margin: 10px 0 0 0;
  color: #353535;
}
.item-text {
  font-size: 12pt;
  top: 18px;
  position: relative;
  color: #888888;
}
.info-normal {
  font-size: 14pt;
  padding: 5px;
  color: #353535;
}
.info-phone {
  padding: 5px;
  color:#888888;
  font-size:12pt;
  text-align: center;
}
.btn-use {
  background-color: #f76260;
  border-radius: 5px;
  width: 50px;
  height: 50px;
  font-size: 10pt;
  color: #fff;
  padding: 7px;
}