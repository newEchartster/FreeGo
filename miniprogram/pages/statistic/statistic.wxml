<!--核销统计-->
<wxs src="../../filter.wxs" module="filter" />
<view class="container">
  <view class="title">
    <view class="title-text-2">总记</view>
    <view class="title-total">{{total}}</view>
  </view>
  <!-- 核销信息 -->
  <scroll-view scroll-y="true" style="height:{{listHeight}}px;" bindscrolltolower="addMore">
    <view wx:for="{{datas}}" wx:key="key" class="member-item">
      <!-- 用户信息 -->
      <view class="flex-normal" style="height:80px;">
        <view style="text-align: center;width: 60px;padding: 10px;">
          <image mode="scaleToFill" class="shop-logo-image" src="{{item.headUrl}}"></image>
        </view>
        <view style="flex:1;">
          <view class="info-normal">{{item.userInfo.nickName}}</view>
          <view class="info-normal">{{item.userInfo.phone}}</view>
        </view>
        <view>
          <view class="info-phone">{{filter.formatDate(item.createTime)}}</view>
          <view class="info-phone">最近到店</view>
        </view>
      </view>
      <!-- 权益信息 -->
      <!-- logo -->
      <view class="flex-normal" style="height:100px;">
        <view style="width:100px">
          <image mode="scaleToFill" class="shop-logo-image" src="{{item.logoPath}}"></image>
        </view>
        <!-- 详细 -->
        <view style="flex:1;" >
          <view class="item-text-title">{{item.title}}</view>
          <view class="item-text">剩余有效期：{{filter.getLeftDays(now, item.endTime)}}天</view>
          <view class="item-text">数量：{{item.num}}<text style="margin-left:20px;">价值：{{item.price}}元</text></view>
        </view>
        <view style="width:80px;padding-top: 25px;">
          <button class="btn-use" style="width:50px">核销成功</button>
        </view>
      </view>
    </view>
  </scroll-view>
</view>
