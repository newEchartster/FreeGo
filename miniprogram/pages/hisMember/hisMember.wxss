/* miniprogram/pages/hisMember/hisMember.wxss */
.member-item {
  margin-bottom: 2px;
  background-color: #fff;
  height: 80px;
  border-bottom: 1px solid #e9e9e9;
}
.title {
  display:flex;
  flex-direction:row;
  width: 100%;
  background-color: #353535;
  height: 40px;
  padding: 5px 10px;
  margin-bottom: 2px;
}
.title-text {
  line-height: 40px;
  font-size: 15pt;
  padding-left: 40px;
  color: #fff;
}
.title-total {
  line-height: 40px;
  margin-right: 40px;
  flex: 1;
  text-align: right;
  color: #fff;
}
.info-normal {
  font-size: 14pt;
  padding: 8px 5px;
  color: #353535;
}
.info-phone {
  padding: 5px;
  color:#888888;
  font-size:12pt;
}