<!--miniprogram/pages/manageMem/addEmp/addEmp.wxml-->
<view class="container" style="height:{{winHeight}}px;padding-top:150px;background-color:#eeeeee;">
  <form bindsubmit="formSubmit" style="width:100%">
    <view class="form-input">
      <label>电 话：</label>
      <input name="phone" style="width:{{inputWidth}}px;" bindblur="setPhone" ></input>
    </view>
    <view class="form-input">
      <label>验证码：</label>
      <input name="code" style="width:100px;" ></input>
      <view class="btn-use" bindtap="getCode">获取验证码</view>
    </view>
    <view class="btn-area"> 
      <button type="primary" formType="submit">提交</button>
    </view>
  </form>
</view>
