/* miniprogram/pages/dog/dogInfo.wxss */
.header-image{
  width: 88px; 
  height: 88px; 
  border-radius: 50%;
  margin: 10px auto;
}
.header-view {
  display:flex;
  flex-direction:column;
  width:100%;
  text-align: center;
  border-bottom: 1px solid #e9e9e9;
  padding-bottom: 20px;
}
.normal-view {
  display:flex;
  flex-direction:row;
  height: 50px;
  line-height: 50px;
  border-bottom: 1px solid #e9e9e9;
}
.name-text {
  width: 100%;
  line-height: 28px;
  font-size: 14pt;
  color: #353535;
}
.title {
  font-size: 14pt;
  color: #888888;
  width: 120px;
  margin-left: 20px;
}
.text {
  font-size: 15pt;
  color: #353535;
  flex: 1;
}
.btn {
  background-color: #1abd35;
  font-size: 10pt;
  color: #fff;
  min-height:25px;
  margin-right: 10px;
  height: 30px;
  padding: 0px;
  margin-top: 10px;
  line-height: 30px;
}