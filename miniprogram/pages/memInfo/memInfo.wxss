/* miniprogram/pages/memInfo/memInfo.wxss */
@import "../../style/commons.wxss";

.form-input {
  height: 50px;
  width: 100%;
  display: flex;
  flex-direction: row;
  box-sizing: border-box;
  padding: 10px 0px 10px 15px;
}
.form-input label{
  width: 70px;
  color: rgb(8, 17, 95);
  line-height: 30px;
}
.form-input input,.form-input picker{
  border-bottom: 2px solid rgba(85, 231, 66, 0.781);
  height: 30px;
  padding-left: 5px;
}
.btn-area {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
}
button {
  margin: 10px;
}
.upload-btn {
  font-size: 14px;
  width: 100px;
  height: 20px;
  padding: 5px;
  min-height: 30px;
  background-color: rgb(169, 199, 36);
}