/* miniprogram/pages/welfareDetail/welfareDetail.wxss */
.container image {
  width: 100%;
}
.welfare-item {
  margin-bottom: 2px;
  display:flex;
  flex-direction:row;
  justify-content:space-between;
  width: 100%;
}
.barcode {
  text-align: center;
  padding: 10px;
  border-top: 1px solid #e9e9e9;
  border-bottom: 1px solid #e9e9e9;
  margin: 10px 0px;
}
.barcode canvas {
  width: 100%;
  height: 60px;
}
.btn-use {
  background-color: #B0B0B0;
  height: 40px;
  width: 50%;
  text-align: center;
  line-height: 40px;
  color: #E0F533;
}
.label-text {
  font-size: 14pt;
  color: #353535;
  padding: 5px 0px 0px 20px;
  width:100%;
}
.remark-text {
  font-size: 10pt;
  color: #888888;
  padding: 5px 0px 0px 20px;
  width:100%;
}
.tips {
  font-size: 14pt;
  color: #888888;
}